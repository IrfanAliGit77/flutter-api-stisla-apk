<html>
<h1>Tokens Page</h1>
<body>
    <div>
        <p>Refresh_Token</p> 
        <p><%= refresh_token %></p>
        <p>Access_Token</p> 
        <p id="access"><%= access_token %></p><br>
        <button id="refreshbtn">Click Here</button>
    </div>
</body>
<script src="https://code.jquery.com/jquery-3.5.0.min.js"></script>
<script src="../APIDOC/ejs.min.js"></script>
<script>
    var refresh = `<%= refresh_token  %>`
    localStorage.setItem('refresh_token',refresh);
    var btn=document.getElementById('refreshbtn');
     btn.addEventListener('click',reffunc);
    function reffunc()
	{	
		$.ajax({
		    url: "http://localhost:8082/tokenrefresh",
		    type : "POST",
		    dataType:"html",
		    data: {refresh_token:localStorage.getItem('refresh_token')},
		    success:function(response){
                $("#access").html($(response).find("#access").html());
                console.log($(response).find("#access").html());
		    } ,
		    error:(err) => console.log(err)
		});	
	}
</script>
</html>